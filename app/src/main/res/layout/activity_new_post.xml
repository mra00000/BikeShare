<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_post_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/vcooperb"
                    android:text="BikeShare"
                    android:textColor="#008000"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="103dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"
                    android:layout_x="100dp"
                    android:layout_y="0dp"
                    android:background="@drawable/my_button"
                    android:fontFamily="@font/seguiemj"
                    android:text="Send"

                    android:textAllCaps="false"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#ECEFF1"
                android:orientation="vertical"
                android:padding="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguiemj"
                    android:text="Motorbike classification"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtTitlePost"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:hint="Honda SH 150i"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#ECEFF1"
                android:orientation="vertical"
                android:padding="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/lblDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguiemj"
                    android:text="Description detail"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txtDescriptionPost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:ems="10"
                            android:hint="SH125/150i - Kiệt tác thiết kế đậm chất châu Âu được thổi một luồng gió mới với việc bổ sung phiên bản đen mờ nam tính dành riêng cho phiên bản 150 cc. Sắc đen mờ trên thân xe, logo đỏ nổi bật, sự thay đổi màu sắc của các chi tiết đem tới hình ảnh tổng thể mạnh mẽ, phóng khoáng và đẳng cấp."
                            android:inputType="text|textMultiLine" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#ECEFF1"
                android:orientation="vertical"
                android:padding="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguiemj"
                    android:text="Price"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtPricePost"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnPickImage"
                    android:layout_width="110dp"
                    android:layout_height="27dp"
                    android:background="@drawable/my_button"
                    android:text="Upload Image"
                    android:textAllCaps="false"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

                <TextView
                    android:id="@+id/txtPickedCount"
                    android:layout_width="217dp"
                    android:layout_height="46dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:fontFamily="@font/seguiemj"
                    android:gravity="center"
                    android:text="You must pick at least one image" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnRemoveImage"
                android:layout_width="110dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/my_button"
                android:fontFamily="@font/seguiemj"
                android:text="Remove All"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>