<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Fragment.BalanceChargeFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:id="@+id/balance_charge_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance_charge_hint"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/charge_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card serial"
            android:inputType="number"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/balance_charge_hint" />

        <EditText
            android:id="@+id/charge_card_serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card serial"
            android:inputType="number"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/charge_card_number" />

        <Button
            android:id="@+id/btn_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Charge"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/charge_card_serial" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>