<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#ECEFF1" />
            <gradient android:angle="-90" android:startColor="#CFCFCF" android:endColor="#E8E8E8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#ECEFF1" />
            <solid android:color="#DEDEEF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#ECEFF1" />
            <gradient android:angle="-90" android:startColor="#F5F5F5" android:endColor="#F8F8FF" />
        </shape>
    </item>
</selector>